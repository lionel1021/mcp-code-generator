# =====================================================
# LightingPro Environment Variables Template
# Copy to .env.local and fill in your actual values
# =====================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_TRACKING_ID
POSTHOG_KEY=your_posthog_key

# Affiliate Links (for production)
AMAZON_ASSOCIATE_TAG=your_amazon_tag
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
UPTIME_ROBOT_API_KEY=your_uptime_robot_key

# Email Service (Optional)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com